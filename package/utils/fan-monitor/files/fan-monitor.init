#!/bin/sh /etc/rc.common

START=99
STOP=01

USE_PROCD=1

start_service() {
	echo "Starting fan monitor instance..."
	procd_open_instance
	procd_set_param command /usr/sbin/fan-monitor
	procd_set_param respawn
	procd_set_param respawn_delay 5
	procd_close_instance
}

start() {
	start_service
}

stop() {
	procd_kill_instance
}

reload() {
	procd_reload_instance
}

